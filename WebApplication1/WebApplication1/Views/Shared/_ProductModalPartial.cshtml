@model Product
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <!-- product details inner end -->
    <div class="product-details-inner">
        <div class="row">
            <div class="col-lg-5">
                <div class="product-large-slider mb-20">
                    <div class="pro-large-img img-zoom">
                        <img src="~/assets/img/product/@Model.Image" alt="product thumb" />
                    </div>
                    <div class="pro-large-img img-zoom">
                        <img src="~/assets/img/product/product-details-img2.jpg" alt="product thumb" />
                    </div>
                    <div class="pro-large-img img-zoom">
                        <img src="~/assets/img/product/product-details-img3.jpg" alt="product thumb" />
                    </div>
                    <div class="pro-large-img img-zoom">
                        <img src="~/assets/img/product/product-details-img4.jpg" alt="product thumb" />
                    </div>
                </div>
                <div class="pro-nav slick-row-5">
                    <div class="pro-nav-thumb"><img src="~/assets/img/product/product-details-img1.jpg" alt="" /></div>
                    <div class="pro-nav-thumb"><img src="~/assets/img/product/product-details-img2.jpg" alt="" /></div>
                    <div class="pro-nav-thumb"><img src="~/assets/img/product/product-details-img3.jpg" alt="" /></div>
                    <div class="pro-nav-thumb"><img src="~/assets/img/product/product-details-img4.jpg" alt="" /></div>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="product-details-des">
                    <h3 class="pro-det-title">@Model.Name</h3>
                    <div class="pro-review">
                        <span><a href="~/#">1 Review(s)</a></span>
                    </div>
                    <div class="price-box">
                        <span class="regular-price">$@Model.Price</span>
                        <span class="old-price"><del>$@Model.DiscountPrice</del></span>
                    </div>
                    <p>@Model.Description</p>
                    <div class="quantity-cart-box d-flex align-items-center mb-20 flex-column">
                        <form id="basketform" method="post" asp-controller="home" asp-action="AddToBasket" asp-route-id="@Model.Id" class="row" enctype="multipart/form-data">
                         
                                    <div class="row">
                                        <div class="form-group col-lg-4 text-center">
                                            <label>Select Color</label>
                                            <select name="ColorIds[]" id="colorids" class="form-control" asp-items="@new SelectList(ViewBag.Colors, nameof(Color.Id), nameof(Color.Name), ViewBag.Colorid)">
                                            </select>
                                        </div>
                                        <div class="form-group col-lg-4 text-center">
                                            <label>Size</label>
                                            <select name="SizeIds[]" id="sizeids" class="form-control" asp-items="@new SelectList(ViewBag.Sizes, nameof(Size.Id), nameof(Size.Name), ViewBag.Sizeid)">
                                            </select>
                                        </div>
                                        <div class="form-group col-lg-4 text-center">
                                            <label>Count</label>
                                            <div class="quantity col-lg-6">
                                                <div class="pro-qty" style="display : flex;justify-content : space-between;align-items : center;padding : 14px;height: 38px;border-radius:5px;">
                                                    <span class="dec qtybtn">-</span>
                                                    <input name="Counts[]" class="form-control" placeholder="Enter Count" value="@ViewBag.Count">
                                                    <span class="inc qtybtn">+</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                    </div>
                        </form>
                        <button form="basketform" id="addbasketbtn" type="submit" data-toggle="tooltip" title="Add To Cart" class="btn btn-default col-lg-6 addToBasket">Add To Cart</button>
                    </div>
                    <div class="availability mb-20">
                        <h5 class="cat-title">Availability:</h5>
                        @if (Model.Count > 0)
                        {
                <span class="text-success">In Stock</span> }
            else
            {
                <span class="text-danger">Out of Stock</span>}
                    </div>
                    <div class="share-icon">
                        <h5 class="cat-title">Share:</h5>
                        <a href="~/#"><i class="fa fa-facebook"></i></a>
                        <a href="~/#"><i class="fa fa-twitter"></i></a>
                        <a href="~/#"><i class="fa fa-pinterest"></i></a>
                        <a href="~/#"><i class="fa fa-google-plus"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- product details inner end -->
</div>